# API Configuration
PORT=5000
MODEL_BATCH_SIZE=32
MODEL_NUM_WORKERS=4

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=solar_panel_fault_detection

# Weights & Biases Configuration
WANDB_API_KEY=your_wandb_api_key
WANDB_PROJECT=solar_panel_fault_detection
WANDB_ENTITY=your_wandb_username

# Model Configuration
MODEL_INPUT_SIZE=224
MODEL_CHANNELS=3
MODEL_BATCH_SIZE=32
MODEL_NUM_WORKERS=4

# API Rate Limiting
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/0
DEFAULT_RATE_LIMIT="200 per day"

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
METRICS_UPDATE_INTERVAL=60  # seconds

# Deployment
RENDER_API_KEY=your_render_api_key
DEPLOYMENT_ENVIRONMENT=development  # development, staging, production